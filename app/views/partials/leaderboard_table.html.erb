<div class="board">
  <h1><strong>From:</strong> <%= @start_date %> - <%= @end_date %></h1>
  <div class="board-table">
    <table class="table table-striped">
      <thead>
        <tr class="title">
          <th>Rank</th>
          <th>Name</th>
          <th>Minutes</th>
          <th>Hours</th>
        </tr>
      </thead>
      <% @leaderboards.each_with_index do |leaderboard,i| %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= leaderboard.name %></td>
          <td><%= leaderboard.total_minutes %></td>
          <td><%= (leaderboard.total_minutes.to_f / 60).round(2) %></td>
        </tr>
      <% end %>
      <tr>
        <td></td>
        <td></td>
        <td><%= @leaderboards.map(&:total_minutes).sum %></td>
        <td>
          <%= (@leaderboards.map(&:total_minutes).sum.to_f / 60).round(2) %>
        </td>
      </tr>
    </table>
  </div>
</div>
